@model LoginCloudFlare


@section Scripts{
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
}
<form method="post" asp-action="TestCloudFlareCaptcha" asp-controller="Home">
    <input type="hidden" asp-for="CfTurnstileResponse" />
    <!-- Email input -->
    <div class="form-outline mb-4">
        <input type="email" asp-for="email" class="form-control" />
        <label class="form-label" for="form2Example1">Email address</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <input type="password" asp-for="password" class="form-control" />
        <label class="form-label" for="form2Example2">Password</label>
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                <label class="form-check-label" for="form2Example31"> Remember me </label>
            </div>
        </div>

        <div class="col">
            <!-- Simple link -->
            <a href="#!">Forgot password?</a>
        </div>
    </div>
    <div class="cf-turnstile" data-sitekey="0x4AAAAAAAHxYkGwWSeupmkC" data-theme="light" data-callback="onSubmit"></div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>


    <!-- Register buttons -->
    <div class="text-center">
        <p>Not a member? <a href="#!">Register</a></p>
        <p>or sign up with:</p>
        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-facebook-f"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-google"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-twitter"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-github"></i>
        </button>
    </div>

    <script>
        function onSubmit(token) {
            document.getElementById("CfTurnstileResponse").value=token;
        }
    </script>
</form>